{
    "image": "gwisp2/hass-docker-cards-devcontainer:latest",
    "postStartCommand": "sudo hactl run",
    "forwardPorts": [
        8123
    ],
    "mounts": [
        "source=${localWorkspaceFolder},target=/config/www/workspace,type=bind",
        "source=${localWorkspaceFolder}/configuration.yaml,target=/opt/hass/data/configuration.yaml,type=bind"
    ]
}